extends layout

block content
	h1 #{retreat.name}
	p #{retreat.description}
	each pictureUrl in retreat.pictures
		img(src=pictureUrl)
	p #{retreat.address}
	p: a(href=retreat.houseUrl) The house
	h1 Prices
	h3 Per night : #{retreat.price.perNight} â‚¬
	h3 Per week : #{retreat.price.perWeek} â‚¬
	h1 Weeks
	ul
		each week, index in retreat.weeks
			li WEEK #{index + 1} : #{week.beds} beds available
				ul
					each day in week.days
						li #{day.id} => #{day.name} #{day.number} #{day.month}
	h1 Participants
	ul
		each participant in participants
			li #{participant.name} #{participant.slack}
				ul
					each day in participant.days
						li #{day.id} => #{day.name} #{day.number} #{day.month}
