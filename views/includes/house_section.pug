.house-section-wrapper
  .url-helper#house
  .container
    .title
      = 'Where the scene takes place'
    .house-section
      .house-section-top
        div #{temperature}°C
        div #{localTime}
      .house-section-bottom
        .house-section-title Our house
        .house-section-subtitle #{location.fullAddress}
      .house-photos
        each pictureUrl in house.pictures
         div(style=`background: url('${pictureUrl}');background-size: cover; background-position: center center;`)
  .container

    include map
    .house-section-datas
      if weeks.length
        .data-item
          .data-item-header #{weeks.length} weeks
          .data-item-footer booked
      if totalPrice
        .data-item
          .data-item-header #{totalPrice}€
          .data-item-footer total price
      if generated
        .data-item
          .data-item-header #{generated}€
          .data-item-footer generated



script.
  $('.house-photos').slick({
    dots: true,
    infinite: true,
    speed: 500,
    fade: true,
    cssEase: 'linear',
    autoplay: true,
    arrows: false,
    dots: false,
    autoplaySpeed: 3000
  });

